<Window x:Class="ProjektDiceGame.NameTyper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektDiceGame"
        xmlns:p="clr-namespace:ProjektDiceGame.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.NameTyper}" Height="140" Width="400" KeyDown="Window_KeyDown" ResizeMode="NoResize">
    <Grid FocusManager.FocusedElement="{Binding ElementName=NameBox}">
        <Label Content="{x:Static p:Resources.TypeName}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="374" Height="32" FontSize="16" VerticalContentAlignment="Center"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="32" Margin="10,0,0,10" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Bottom" Width="180" FontSize="16" VerticalContentAlignment="Center"/>
        <Button Content="{x:Static p:Resources.Submit}" HorizontalAlignment="Right" Margin="0,0,55,10" VerticalAlignment="Bottom" Width="90" Height="32" FontSize="16" VerticalContentAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
